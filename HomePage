  <script>
    // ====== SAMPLE DATA ======
    // Edit these arrays to update posts & videos. When you deploy on GitHub, edit the file in the repo.
    const posts = [
      {id:1,title:'A clean derivation of Lagrange equations (with examples)',date:'2025-07-01',excerpt:'Step-by-step derivation for constrained systems. Includes examples and exercises.',tags:['classical mechanics','lagrange'],content:'Full post content here...'},
      {id:2,title:'Diffraction: Intuition, formulas and problems',date:'2025-06-10',excerpt:'From single-slit to Fresnel zones — clear visual explanation.',tags:['optics','diffraction'],content:'Full post content here...'},
      {id:3,title:'Using Manim to visualize (a+b)^2 expansion',date:'2025-05-20',excerpt:'Create step-by-step animation of algebraic identities with ManimCE.',tags:['manim','math'],content:'Full post content here...'},
    ];

    const videos = [
      {id:'dQw4w9WgXcQ',title:'Sample Video 1'},
      {id:'9bZkp7q19f0',title:'Sample Video 2'}
    ];

    // ====== RENDER HELPERS ======
    function createPostCard(post){
      const div = document.createElement('div'); div.className='post';
      div.innerHTML = `<div style="flex:1"><strong>${post.title}</strong><div class=\"meta muted\">${post.date} • ${post.tags.join(', ')}</div><p class=\"muted\">${post.excerpt}</p></div>`;
      div.addEventListener('click', ()=> openPost(post));
      return div;
    }

    function openPost(post){
      // Simple modal-like full post using new window (keeps single file simple)
      const w = window.open('', '_blank');
      w.document.write(`<!doctype html><html><head><meta charset="utf-8"><title>${post.title}</title><meta name=\"viewport\" content=\"width=device-width,initial-scale=1\"><link href=\"https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap\" rel=\"stylesheet\"><style>body{background:#071025;color:#e6eef6;font-family:Inter;padding:20px}a{color:#57a7ff}</style></head><body><h1>${post.title}</h1><div style=\"color:#9aa4b2;margin-bottom:16px\">${post.date} • ${post.tags.join(', ')}</div><div style=\"line-height:1.7;color:#dceafc\">${post.content}</div><hr style=\"margin-top:24px\"><div><a href=\"${location.href}\">Back</a></div></body></html>`);
      w.document.close();
    }

    function renderPosts(){
      const q = document.getElementById('searchInput').value.toLowerCase();
      const container = document.getElementById('postsContainer'); container.innerHTML='';
      const filtered = posts.filter(p=> (p.title + p.excerpt + p.tags.join(' ')).toLowerCase().includes(q));
      if(filtered.length===0) container.innerHTML='<div class="muted">No posts found. Edit the posts array in the HTML file to add posts.</div>';
      filtered.forEach(p=> container.appendChild(createPostCard(p)));
    }

    function renderVideos(){
      const c = document.getElementById('videosContainer'); c.innerHTML='';
      videos.forEach(v=>{
        const dv = document.createElement('div'); dv.className='video'; dv.innerHTML = `<div style=\"background:var(--card);padding:10px;border-radius:10px\"><iframe src=\"https://www.youtube.com/embed/${v.id}\" title=\"${v.title}\" allow=\"accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture\" allowfullscreen></iframe><div class=\"muted\" style=\"margin-top:8px\">${v.title}</div></div>`;
        c.appendChild(dv);
      });
    }

    // Initialize
    document.getElementById('year').textContent = new Date().getFullYear();
    renderPosts(); renderVideos();

    // ====== Tips in console for editing ======
    console.log('Edit the `posts` and `videos` arrays at the top of the HTML file to add content.');
  </script>
